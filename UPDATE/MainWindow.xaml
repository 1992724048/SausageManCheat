<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="UPDATE.MainWindow"
    mc:Ignorable="d"
    Height="720" Width="1280"
    MaxHeight="720" MaxWidth="1280"
    ResizeMode="CanMinimize"
    Background="Transparent"
    Loaded="MainWindow_OnLoaded"
    Title="软件更新">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Canvas Margin="0,-33,0,0">
                <Canvas.Background>
                    <ImageBrush ImageSource="/wallhaven-1pxmev_5000x3125.png" Stretch="UniformToFill" />
                </Canvas.Background>
                <Canvas Height="64" Width="1280" HorizontalAlignment="Center" Canvas.Top="620"
                        VerticalAlignment="Top" Background="#7FFFFFFF">
                    <hc:CircleProgressBar x:Name="ProgressBar" Canvas.Left="10" Canvas.Top="10" Height="44"
                                          Width="44" FontSize="10" HorizontalAlignment="Left"
                                          Value="10"
                                          VerticalAlignment="Top"
                                          Style="{StaticResource ProgressBarInfoCircle}" />
                    <Label Name="Tips" Content="正在检查更新... (更新内容请前往: https://github.com/1992724048/SausageManCheat 查看)" Canvas.Left="59" Canvas.Top="10" Width="1211" Background="{x:Null}"
                           BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Foreground="#FF2FA8EF"
                           HorizontalContentAlignment="Left" Height="44" HorizontalAlignment="Left" FontSize="16" />
                    <Label Content="1.0.0" HorizontalAlignment="Left" Canvas.Left="1135" Canvas.Top="36"
                           Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2FA8EF"
                           HorizontalContentAlignment="Right" Width="125" VerticalAlignment="Top" />
                </Canvas>
            </Canvas>
        </Grid>
    </Grid>
</Window>